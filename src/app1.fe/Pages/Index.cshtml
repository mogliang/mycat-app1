@page
@model IndexModel
@{
    ViewData["Title"] = Model.AppInfo?.SiteName??"[Missing]";
    ViewData["MachineInfo"] = @Model.MachineInfo;
    ViewData["AppVersion"] = @Model.AppVersion;
}

<div class="text-center">
    <h1 class="display-4">@Model.AppInfo?.Title</h1>
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">RunId</th>
                <th scope="col">Result</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody class="text-start">
            @foreach (var result in Model.TaskResults)
            {
                <tr>
                    <td >
                        @Html.DisplayFor(m=>result.RunId)
                    </td>
                    <td>
                        @Html.CheckBoxFor(m=>result.Success)
                    </td>
                    <td>
                        <p style="white-space:pre;">@Html.DisplayFor(m=>result.Message)</p>
                        <span>Host: @Html.DisplayFor(m=>result.Host)</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>